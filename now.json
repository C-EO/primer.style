{
  "version": 2,
  "name": "primer-style",
  "alias": "primer.style",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {"distDir": "public"}
    }
  ],
  "redirects": [
    {"source": "/components(/.*)?", "destination": "https://primer-components.now.sh"},
    {"source": "/playroom(/.*)?", "destination": "https://primer-components.now.sh/playroom"},
    {"source": "/css(/.*)?", "destination": "https://primer-css.now.sh"},
    {"source": "/design(/.*)?", "destination": "https://primer-design.now.sh"},
    {"source": "/blueprints(/.*)?", "destination": "https://primer-blueprints.now.sh"},
    {"source": "/presentations(/.*)?", "destination": "https://primer-presentations.now.sh"},
    {"source": "/doctocat(/.*)?", "destination": "https://doctocat.now.sh"}
  ]
}
